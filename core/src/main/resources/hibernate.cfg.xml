        <property name="hibernate.connection.password">receiver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        -->

        <!-- PostgreSQL -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost/receiver</property>
		<property name="hibernate.connection.username">receiver</property>
        <property name="hibernate.connection.password">receiver</property>
        <property name="hibernate.dialect">org.b1n.informer.core.persistence.WithTimeZonePostgreSQLDialect</property>

