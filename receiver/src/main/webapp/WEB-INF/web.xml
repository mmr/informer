<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app id="receiver" 
      xmlns="http://java.sun.com/xml/ns/j2ee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">

  <display-name>Receiver</display-name>

  <filter>
    <filter-name>transactionFilter</filter-name>
    <filter-class>org.b1n.receiver.web.TransactionFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>transactionFilter</filter-name>
    <servlet-name>saveInfo</servlet-name>
  </filter-mapping>

  <servlet>
    <servlet-name>vraptor2</servlet-name>
    <servlet-class>org.vraptor.VRaptorServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet>
    <servlet-name>saveInfo</servlet-name>
    <servlet-class>org.b1n.receiver.web.SaveInfoServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>saveInfo</servlet-name>
    <url-pattern>/saveInfo</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>vraptor2</servlet-name>
    <url-pattern>*.logic</url-pattern>
  </servlet-mapping>

  <taglib>
    <taglib-uri>http://b1n.org/receiver</taglib-uri>
    <taglib-location>/WEB-INF/receiver.tld</taglib-location>
  </taglib>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
