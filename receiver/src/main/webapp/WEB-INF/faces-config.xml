<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">
<faces-config>
  <application>
    <locale-config>
      <default-locale>pt_BR</default-locale>
      <supported-locale>pt_BR</supported-locale>
    </locale-config>
  </application>

  <converter>
    <converter-id>b1n.BooleanConverter</converter-id>
    <converter-class>org.b1n.receiver.web.converter.BooleanConverter</converter-class>
  </converter>

  <converter>
    <converter-id>b1n.BuildTimeConverter</converter-id>
    <converter-class>org.b1n.receiver.web.converter.BuildTimeConverter</converter-class>
  </converter>

  <navigation-rule>
    <from-view-id>*</from-view-id>
    <navigation-case>
      <to-view-id>/build.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>

  <managed-bean>
    <managed-bean-name>lastBuilds</managed-bean-name>
    <managed-bean-class>org.b1n.receiver.web.bean.LastBuildsBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>

  <managed-bean>
    <managed-bean-name>buildsByUser</managed-bean-name>
    <managed-bean-class>org.b1n.receiver.web.bean.BuildsByUserBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
</faces-config>